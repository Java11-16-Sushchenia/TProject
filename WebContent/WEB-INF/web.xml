		<url-pattern>/AJAXController</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>by.asushenya.total.controller.listener.InitializationSourceListener</listener-class>
	</listener>

	<!-- Filters -->
	<filter>
		<filter-name>AddNewGameFilter</filter-name>
		<filter-class>
			by.asushenya.total.controller.ajax_controller.ajax_command.filter.AdminFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AddNewGameFilter</filter-name>
		<url-pattern>/addNewGamePage</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>AdminPageFilter</filter-name>
		<filter-class>
			by.asushenya.total.controller.ajax_controller.ajax_command.filter.AdminFilter</filter-class>
	</filter>
