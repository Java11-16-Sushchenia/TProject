		<location>/WEB-INF/pages/error_pages/notFoundPage.jsp</location>
	</error-page>


	<!-- Controllers -->

	<servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>by.asushenya.total.controller.Controller</servlet-class>
	</servlet>
	<servlet-mapping>
